{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@routes": ["routes/"],
      "@utils/*": ["utils/*"]
    },
    "target": "es2017"
  },  
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
